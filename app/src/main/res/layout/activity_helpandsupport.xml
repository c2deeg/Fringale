<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Activities.HelpandsupportActivity.HelpandsupportActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_back_24"
            app:tint="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Help &amp; support"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#E3E3E3">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recent order"
            android:textColor="@color/grey3"
            android:textSize="16sp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="0.65"
            android:fontFamily="@font/poppins_bold"
            android:text="Pizza Hut"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.35">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/tickmark"
                android:drawablePadding="5dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Delivered"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Sector 64"
        android:textColor="@color/grey3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios"
        android:drawableTint="@color/grey3"
        android:fontFamily="@font/poppins_semibold"
        android:text="â‚¹146"
        android:textColor="@color/grey3" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layerType="software"
        android:src="@drawable/dotted" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Margherita(2 pizza's)"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_regular"
        android:textSize="16sp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="December 16,5.12pm"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_regular"
        android:textSize="16sp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Issue with previous Orders"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="18sp"
        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
        android:drawableTint="@color/black"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="25dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Privacy Policies"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="18sp"
        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
        android:drawableTint="@color/black"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="25dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Terms and Condtions   "
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="18sp"
        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
        android:drawableTint="@color/black"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="25dp"/>
    <TextView
        android:id="@+id/tvcustomersupport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Customer Support"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="18sp"
        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
        android:drawableTint="@color/black"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="25dp"/>
    <TextView
        android:id="@+id/tvfaq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FAQs"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="18sp"
        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
        android:drawableTint="@color/black"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="25dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="#E3E3E3">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textColor="@color/appcolor"
            android:textSize="16sp"
            android:gravity="center"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:padding="0dp"/>
    </LinearLayout>

</LinearLayout>